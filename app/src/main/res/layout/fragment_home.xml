<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:background="#ffffff">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView"
        android:src="@drawable/jade_hs_standard"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:paddingLeft="20dp"
        android:layout_above="@+id/linearLayout3"
        android:layout_alignParentTop="true" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:columnCount="2"
        android:layout_alignWithParentIfMissing="false"
        android:layout_above="@+id/linearLayout2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="false"
        android:layout_alignParentRight="true"
        android:id="@+id/linearLayout3">

        <Button
            android:layout_width="match_parent"
            android:layout_height="65dp"
            android:layout_weight="1"
            android:text="@string/txtHomepage"
            android:id="@+id/btnHomepage"
            android:textColor="#ffffff"
            android:backgroundTint="@color/jadehs_red"
            android:background="@color/jadehs_red"
            android:layout_margin="0.5dp"
            android:layout_marginLeft="1dp"
            android:elegantTextHeight="true" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="65dp"
            android:layout_weight="1"
            android:text="@string/txtMoodle"
            android:id="@+id/btnMoodle"
            android:textColor="#ffffff"
            android:backgroundTint="@color/jadehs_red"
            android:background="@color/jadehs_red"
            android:layout_marginRight="1dp"
            android:layout_margin="0.5dp"
            android:elegantTextHeight="true" />
    </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_above="@+id/linearLayout"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="false"
            android:layout_alignParentRight="true"
            android:id="@+id/linearLayout2">
        <Button
            android:layout_width="match_parent"
            android:layout_height="65dp"
            android:layout_weight="1"
            android:text="@string/txtECampus"
            android:id="@+id/btnECampus"
            android:textColor="#ffffff"
            android:backgroundTint="@color/jadehs_red"
            android:background="@color/jadehs_red"
            android:layout_margin="0.5dp"
            android:layout_marginLeft="1dp"
            android:elegantTextHeight="true" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="65dp"
            android:layout_weight="1"
            android:text="@string/txtOWA"
            android:id="@+id/btnOWA"
            android:textColor="#ffffff"
            android:backgroundTint="@color/jadehs_red"
            android:background="@color/jadehs_red"
            android:layout_marginRight="1dp"
            android:layout_margin="0.5dp"
            android:elegantTextHeight="true" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentLeft="true"
        android:id="@+id/linearLayout">
        <Button
            android:layout_width="match_parent"
            android:layout_height="65dp"
            android:layout_weight="1"
            android:text="@string/txtGuide"
            android:id="@+id/btnGuide"
            android:textColor="#ffffff"
            android:backgroundTint="@color/jadehs_red"
            android:background="@color/jadehs_red"
            android:layout_margin="0.5dp"
            android:layout_marginLeft="1dp"
            android:elegantTextHeight="true" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="65dp"
            android:layout_weight="1"
            android:text="@string/txtOwncloud"
            android:id="@+id/btnOwncloud"
            android:textColor="#ffffff"
            android:backgroundTint="@color/jadehs_red"
            android:background="@color/jadehs_red"
            android:layout_marginRight="1dp"
            android:layout_margin="0.5dp"
            android:elegantTextHeight="true" />

    </LinearLayout>

</RelativeLayout>